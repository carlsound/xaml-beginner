<Page
    x:Class="RestaurantManager.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RestaurantManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    RequestedTheme="Dark">
    <!---->
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" HorizontalAlignment="Stretch">
        <!---->
        <Grid.RowDefinitions>
            <!---->
            <RowDefinition Height="3*"/>
            <!---->
            <RowDefinition Height="*"/>
            <!---->
            <RowDefinition Height="4*"/>
            <!---->
        </Grid.RowDefinitions>
        <!---->
        <Grid.ColumnDefinitions>
            <!---->
            <ColumnDefinition Width="*"/>
            <!---->
            <ColumnDefinition Width="*"/>
            <!---->
        </Grid.ColumnDefinitions>
        <!---->
        <TextBlock Text="Restaurant Manager"
                   FontSize="45"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"  />
        <!---->
        <TextBlock Text="Internal Test Version"
                   Grid.Row="1"
                   Grid.Column="0"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"  />
        <!---->
        <Button x:ConnectionId='1' Name="mainPageGoToOrdersView"
                Content="Go To Orders View"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                                      
                ClickMode="Press" />
        <!---->
        <Button x:ConnectionId='2' Name="mainPageSubmitOrder"
                Content="Submit Order"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                                   
                ClickMode="Press" />
        <!---->
    </Grid>
</Page>

